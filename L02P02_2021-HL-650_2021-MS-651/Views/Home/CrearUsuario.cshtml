@{
}
<div class="container">
    <div class="header" style="background-color: midnightblue">
        <div class="imagen">
            <a class="imagen"><img src="https://upload.wikimedia.org/wikipedia/commons/8/8e/UNICAES_Logo.png" height="60px" width="60px" style="float: left; margin-right: 10px;" /></a>
        </div>
        <h3 style ="color: white; align-content: center;">Creación de usuarios</h3>
        <p style="color: white; align-content: center;">Ingrese los datos solicitados</p>
    </div>
    <div class="ingresoDatos">
        <div ="form">

            <form asp-action="CrearUsuario">
                @*Inicio del Formulario*@
                <div class="formulario ancho-80">
                    <div class="row">
                        <div class="col-xs-12">
                            <div c lass="form-group mb-4">
                                <label>Nombre:</label>
                                @Html.TextBox("nombre", "", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div c lass="form-group mb-4">
                                <label>Apellido:</label>
                                @Html.TextBox("apellido", "", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group mb-4">
                                @Html.Label("lblDescripcion", "Dirección:")
                                @Html.TextArea("direccion", "", new { @class = "form-control", @placeHolder = "Ingrese la dirección" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group mb-4">
                                @Html.Label("lblDepartamento", "Departamento:")
                                @Html.DropDownList("Id", ViewData["listaDeDepartamentos"] as SelectList, "Seleccione un estado", new { @class = "form-control" })

                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group mb-4">
                                @Html.Label("lblPuesto", "Puesto:")
                                @Html.DropDownList("Id", ViewData["listaDePuestos"] as SelectList, "Seleccione una categoría", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group mb-4">
                                <input type="submit" class="btn btn-primary" value="Guardar" />
                            </div>
                        </div>
                    </div>
                </div>
                @*Fin del Formulario*@
            </form>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Dirrecion</th>
                        <th>Departamento</th>
                        <th>Genero</th>
                        <th>Puesto</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var equipo in (IEnumerable<dynamic>)ViewData["listadoDeClientes"])
                    {
                        <tr>
                            <td>@equipo.nombre</td>
                            <td>@equipo.descripcion</td>
                            <td>@equipo.marca_nombre</td>
                            <td>@equipo.nombre</td>
                            <td>@equipo.descripcion</td>
                            <td>@equipo.marca_nombre</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <div class="agregarFoto">
        </div>
        <div class="table">
            <div class="tablas">
                <!-- Aquí puedes añadir las tablas u otro contenido relacionado -->

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Nombre Completo</th>
                            <th>Email</th>
                            <th>Dirección</th>
                            <th>Departamento</th>
                            <th>Género</th>
                            <th>Puesto</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var clientes in (IEnumerable<dynamic>)ViewData["listadoDeClientes"])
                        {
                            <tr>
                                <td>@clientes.nombre</td>
                                <td>@clientes.email</td>
                                <td>@clientes.departamento</td>
                                <td>@clientes.genero</td>
                                <td>@clientes.puesto</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>

</div>